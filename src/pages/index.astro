---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import Hero from "../components/Hero";
import Benefits from "../components/Benefits";
import Services from "../components/Services";
import Testimonials from "../components/Testimonials";
import FeaturedReels from "@/components/FeaturedReels";
import { getLatestFacebookReels } from "@/lib/social";
import FAQ from "@/components/FAQ";
import Plans from "@/components/Plans";
import ContactForm from "@/components/ContactForm";
import Footer from "@/components/Footer";
import "@/styles/global.css";

const reels = await getLatestFacebookReels(4);
---

<Layout
	title="Limpieza de Piscinas para Airbnb en La Fortuna y San Carlos | JyM Mantenimientos"
	description="Mantenimiento profesional de piscinas para propiedades de Airbnb y alquiler vacacional en La Fortuna y San Carlos. Agua cristalina garantizada para tus huÃ©spedes."
>
	<Navbar client:load />
	<main>
		<Hero client:load />
		<Benefits client:load />
		<Services client:load />
		<Plans client:load />
		<FeaturedReels client:load initialReels={reels} />
		<Testimonials client:load />
		<FAQ client:load />
		<ContactForm client:load />
	</main>
	<Footer />
</Layout>
